<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标签布局-->
    <declare-styleable name="SimpleFlowLayout">

        <attr name="sfl_horizontal_spacing" format="dimension" />
        <attr name="sfl_vertical_spacing" format="dimension" />
        <attr name="sfl_text_size" format="dimension" />
        <attr name="sfl_text_color" format="color" />
        <attr name="sfl_background_resource" format="reference" />
        <attr name="sfl_text_horizontal_padding" format="dimension" />
        <attr name="sfl_text_vertical_padding" format="dimension" />
        <!--限制最大的标签行数-->
        <attr name="sfl_max_lines" format="integer" />
        <!--限制最大的标签个数-->
        <attr name="sfl_max_count" format="integer" />

    </declare-styleable>
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color" />
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MaxHeightLayout">
        <attr name="height_ratio" format="reference|float" />
        <attr name="height_dimen" format="reference|dimension" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!--左右对齐的TextView-->
    <declare-styleable name="AutoWrapTextView">
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="lineSpacingExtra" format="integer" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <!--自定义页面指示器-->
    <declare-styleable name="CustomPagerIndicator">
        <attr name="dotMargin" format="dimension" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SlideDeleteLayout">
        <!--是否可以通过滑动，显示删除菜单，默认true-->
        <attr name="slideEnable" format="boolean" />
        <!--是否是ios方式的滑动方式,默认true-->
        <attr name="iosStyle" format="boolean" />
        <!--标记是左滑还是右滑显示删除菜单，默认左滑显示删除菜单-->
        <attr name="leftSlide" format="boolean" />
    </declare-styleable>
    <attr name="SlideDeleteLayoutDefStyleAttr" format="reference" />
    <attr name="CustomView_Theme_Style" format="reference" />

    <declare-styleable name="CustomView">
        <!--颜色-->
        <attr name="bgResId" format="reference" />
        <attr name="color" format="color" />
        <!--字体大小-->
        <attr name="cus_font" format="dimension" />
        <!--文字-->
        <attr name="text" format="string" />
        <attr name="type" format="enum">
            <enum name="common" value="1" />
            <enum name="material" value="2" />
        </attr>
        <attr name="flag">
            <flag name="flag1" value="0x01" />
            <flag name="flag2" value="0x02" />
            <flag name="flag4" value="0x04" />
        </attr>
    </declare-styleable>

    <!--网易新闻底部文字介绍布局-->
    <declare-styleable name="DragSlopLayout">
        <attr name="fix_height" format="dimension" />
        <attr name="max_height" format="dimension" />
    </declare-styleable>

    <!--时间选择器-->
    <declare-styleable name="PickerView">
        <attr name="isLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BlurMaskFilterView">
        <attr name="blur_style" format="integer" />
    </declare-styleable>
    <declare-styleable name="BitmapShaderView">
        <attr name="tile_mode" format="integer" />
    </declare-styleable>

    <declare-styleable name="RequiredTextView">

        <attr name="required_text" format="string|reference" />
        <!--后缀-->
        <attr name="postfix" format="string|reference" />
        <!--前缀-->
        <attr name="prefix" format="string|reference" />

        <attr name="prefix_color" format="color|reference" />
        <attr name="postfix_color" format="color|reference" />

        <!--后缀的字体-->
        <attr name="postfix_text_size" format="dimension|reference" />

    </declare-styleable>

    <!--属性共用的话，就把共用的属性提取出来。-->
    <attr name="start_color" format="color|reference" />
    <attr name="center_color" format="color|reference" />
    <attr name="end_color" format="color|reference" />

    <declare-styleable name="LinearGradientView">
        <attr name="start_color" />
        <attr name="end_color" />
    </declare-styleable>

    <declare-styleable name="LinearGradientView2">
        <attr name="start_color" />
        <attr name="end_color" />
    </declare-styleable>


    <!--            <enum name="TOP_BOTTOM" value="1" />-->
    <!--            <enum name="TR_BL" value="TR_BL" />-->
    <!--            <enum name="RIGHT_LEFT" value="RIGHT_LEFT" />-->
    <!--            <enum name="BR_TL" value="BR_TL" />-->
    <!--            <enum name="BOTTOM_TOP" value="BOTTOM_TOP" />-->
    <!--            <enum name="BL_TR" value="BL_TR" />-->
    <!--            <enum name="LEFT_RIGHT" value="LEFT_RIGHT" />-->
    <!--            <enum name="TL_BR" value="TL_BR" />-->

    <declare-styleable name="ColorGradientView3">
        <attr name="colors" format="reference" />
        <attr name="start_color" />
        <attr name="center_color" />
        <attr name="end_color" />

        <attr name="gradient_orientation" format="enum">

            <!--从上到下-->
            <enum name="TOP_BOTTOM" value="0" />
            <!--从右上角到左下角-->
            <enum name="TR_BL" value="1" />
            <!--从右到左-->
            <enum name="RIGHT_LEFT" value="2" />
            <!--从右下角到左上角-->
            <enum name="BR_TL" value="3" />
            <!--从下到上-->
            <enum name="BOTTOM_TOP" value="4" />
            <!--从左下角到右上角-->
            <enum name="BL_TR" value="5" />
            <!--从左到右-->
            <enum name="LEFT_RIGHT" value="6" />
            <!--从左上角到右下角-->
            <enum name="TL_BR" value="7" />

        </attr>

    </declare-styleable>


    <declare-styleable name="TestScrollerUpDownView">
        <attr name="text_color" format="color|reference" />
        <attr name="text_size" format="dimension|reference" />

        <!--最后一个字-->
        <attr name="last_word" format="string|reference" />
        <attr name="last_word_text_color" format="color|reference" />
        <attr name="last_word_text_size" format="dimension|reference" />
        <!--单位毫秒-->
        <attr name="animation_duration" format="integer|reference" />

    </declare-styleable>

    <!-- 自定义环形进度条的属性-->
    <declare-styleable name="RingProgressView">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="rps_text_size" format="dimension" />
        <attr name="rps_text_color" format="color" />
        <attr name="currentProgress" format="integer" />
        <attr name="maxProgress" format="integer" />
    </declare-styleable>

    <!-- 自定义Round ScrollView属性-->
    <declare-styleable name="RoundScrollView">
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <attr name="corner_radius" format="dimension" />
    <attr name="cut_radius" format="dimension" />
    <attr name="cut_width" format="dimension" />
    <attr name="cut_height" format="dimension" />

    <declare-styleable name="CutCornerImageView">
        <attr name="corner_radius" />
        <attr name="cut_radius" />
        <attr name="cut_width" />
        <attr name="cut_height" />
    </declare-styleable>

    <declare-styleable name="CutCornerRelativeLayout">
        <attr name="corner_radius" />
        <attr name="cut_radius" />
        <attr name="cut_width" />
        <attr name="cut_height" />

    </declare-styleable>


    <declare-styleable name="NumberRunningTextView">
        <attr name="duration" format="integer"></attr>
        <attr name="minNum" format="integer"></attr>
        <attr name="minMoney" format="float"></attr>
        <!--内容的格式-->
        <attr name="textType">
            <enum name="money" value="0"></enum>
            <enum name="num" value="1"></enum>
        </attr>
        <!--是否使用每三位数字一个逗号-->
        <attr name="useCommaFormat" format="boolean"></attr>
        <!--是否当内容改变的时候使用动画，不改变则不使用动画-->
        <attr name="runWhenChange" format="boolean"></attr>

    </declare-styleable>

    <declare-styleable name="FinalMeasureLinearlayout_Layout">
        <attr name="layout_final_measure" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <!-- 1、关于阴影 -->
        <!--阴影：是否要显示阴影，可能有只想用shape和selector功能，不想要阴影-->
        <attr name="hl_shadowHidden" format="boolean" />
        <!--阴影：阴影颜色-->
        <attr name="hl_shadowColor" format="color" />
        <!--阴影：阴影的扩散范围(也可以理解为扩散程度)-->
        <attr name="hl_shadowLimit" format="dimension" />
        <!--控件区域是否对称，默认是对称。不对称的话，那么控件区域随着阴影区域走-->
        <attr name="hl_shadowSymmetry" format="boolean" />
        <!--阴影：x轴的偏移量-->
        <attr name="hl_shadowOffsetX" format="dimension" />
        <!--阴影：y轴的偏移量-->
        <attr name="hl_shadowOffsetY" format="dimension" />
        <!--阴影：左边是否隐藏阴影-->
        <attr name="hl_shadowHiddenLeft" format="boolean" />
        <!--阴影：右边是否隐藏阴影-->
        <attr name="hl_shadowHiddenRight" format="boolean" />
        <!--阴影：上边是否隐藏阴影-->
        <attr name="hl_shadowHiddenTop" format="boolean" />
        <!--阴影：下面是否隐藏阴影-->
        <attr name="hl_shadowHiddenBottom" format="boolean" />


        <!-- 2、关于圆角 -->
        <!--圆角：统一大小，其中包括了阴影，shape、背景图、stroke边框圆角-->
        <attr name="hl_cornerRadius" format="dimension" />
        <!--圆角：左上圆角。设置后会忽略hl_cornerRadius的值-->
        <attr name="hl_cornerRadius_leftTop" format="dimension" />
        <!--圆角：右上圆角。同上-->
        <attr name="hl_cornerRadius_rightTop" format="dimension" />
        <!--圆角：左下圆角。同上-->
        <attr name="hl_cornerRadius_leftBottom" format="dimension" />
        <!--圆角：右下圆角。同上-->
        <attr name="hl_cornerRadius_rightBottom" format="dimension" />


        <!-- 3、关于shape及selector -->
        <!-- shape及selector样式：pressed、sectored -->
        <!-- <<新增line模式>>，也就是线模式。可搭配hl_strokeColor，hl_stroke_dashWidth，hl_stroke_dashGap实现虚线 -->
        <attr name="hl_shapeMode">
            <enum name="pressed" value="1" />
            <enum name="selected" value="2" />
            <enum name="ripple" value="3" />
            <enum name="dashLine" value="4" />
        </attr>

        <!-- 为false的默认背景，可单独使用-->
        <attr name="hl_layoutBackground" format="reference|color" />
        <!-- 为true的默认背景，必须搭配hl_layoutBackground属性使用。否则报错-->
        <attr name="hl_layoutBackground_true" format="reference|color" />

        <!-- stroke样式，stroke的宽度-->
        <attr name="hl_strokeWith" format="dimension" />
        <!-- 为false时，默认的stoke颜色值，可单独使用-->
        <attr name="hl_strokeColor" format="color" />
        <!-- 为true时，默认的stoke颜色值，必须搭配hl_strokeColor属性使用。否则报错-->
        <attr name="hl_strokeColor_true" format="color" />
        <!-- 虚线边框的实线部分长度 -->
        <attr name="hl_stroke_dashWidth" format="dimension" />
        <!-- 虚线边框的间隔宽度-->
        <attr name="hl_stroke_dashGap" format="dimension" />


        <!-- 这里最终舍弃了系统clickable的方案，因为系统系统主动设置setOnClickListener后，会主动设置成true,所以这里采用自定义 -->
        <attr name="clickable" format="boolean" />
        <!-- hl_clickable为false时，要展示的图片或颜色-->
        <attr name="hl_layoutBackground_clickFalse" format="reference|color" />


        <!-- 4、关于填充的渐变色 -->
        <!-- 要知道，如果设置了渐变色。那么将以渐变色为主。hl_layoutBackground属性将无效 -->
        <!-- 渐变的起始颜色 -->
        <attr name="hl_startColor" format="color" />
        <!-- 渐变的中间颜色 -->
        <attr name="hl_centerColor" format="color" />
        <!-- 渐变的终止颜色 -->
        <attr name="hl_endColor" format="color" />
        <!-- 渐变角度，默认值为0-->
        <attr name="hl_angle" format="integer" />


        <!-- 5、绑定一个TextView，在点击按钮时，有可能有颜色变化 -->
        <attr name="hl_bindTextView" format="reference" />
        <attr name="hl_textColor" format="color" />
        <attr name="hl_textColor_true" format="color" />
        <attr name="hl_text" format="string" />
        <attr name="hl_text_true" format="string" />

    </declare-styleable>

    <!-- 自定义Round ScrollView属性-->
    <declare-styleable name="CustomActivityPosition">
        <attr name="showCloseButton" format="boolean" />
    </declare-styleable>

</resources>