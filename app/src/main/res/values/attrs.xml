<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标签布局-->
    <declare-styleable name="SimpleFlowLayout">

        <attr name="sfl_horizontal_spacing" format="dimension" />
        <attr name="sfl_vertical_spacing" format="dimension" />
        <attr name="sfl_text_size" format="dimension" />
        <attr name="sfl_text_color" format="color" />
        <attr name="sfl_background_resource" format="reference" />
        <attr name="sfl_text_horizontal_padding" format="dimension" />
        <attr name="sfl_text_vertical_padding" format="dimension" />
        <!--限制最大的标签行数-->
        <attr name="sfl_max_lines" format="integer" />
        <!--限制最大的标签个数-->
        <attr name="sfl_max_count" format="integer" />

    </declare-styleable>
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color" />
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MaxHeightLayout">
        <attr name="height_ratio" format="reference|float" />
        <attr name="height_dimen" format="reference|dimension" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!--左右对齐的TextView-->
    <declare-styleable name="AutoWrapTextView">
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="lineSpacingExtra" format="integer" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SlideDeleteLayout">
        <!--是否可以通过滑动，显示删除菜单，默认true-->
        <attr name="slideEnable" format="boolean" />
        <!--是否是ios方式的滑动方式,默认true-->
        <attr name="iosStyle" format="boolean" />
        <!--标记是左滑还是右滑显示删除菜单，默认左滑显示删除菜单-->
        <attr name="leftSlide" format="boolean" />
    </declare-styleable>
    <attr name="SlideDeleteLayoutDefStyleAttr" format="reference" />
    <attr name="CustomView_Theme_Style" format="reference" />

    <declare-styleable name="CustomView">
        <!--颜色-->
        <attr name="color" format="color" />
        <!--字体大小-->
        <attr name="cus_font" format="dimension" />
        <!--文字-->
        <attr name="text" format="string" />
        <attr name="type" format="enum">
            <enum name="common" value="1" />
            <enum name="material" value="2" />
        </attr>
        <attr name="flag">
            <flag name="flag1" value="0x01" />
            <flag name="flag2" value="0x02" />
            <flag name="flag4" value="0x04" />
        </attr>
    </declare-styleable>

    <!--网易新闻底部文字介绍布局-->
    <declare-styleable name="DragSlopLayout">
        <attr name="fix_height" format="dimension" />
        <attr name="max_height" format="dimension" />
    </declare-styleable>

    <!--时间选择器-->
    <declare-styleable name="PickerView">
        <attr name="isLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BlurMaskFilterView">
        <attr name="blur_style" format="integer" />
    </declare-styleable>
    <declare-styleable name="BitmapShaderView">
        <attr name="tile_mode" format="integer" />
    </declare-styleable>

    <declare-styleable name="RequiredTextView">

        <attr name="required_text" format="string|reference" />
        <!--后缀-->
        <attr name="postfix" format="string|reference" />
        <!--前缀-->
        <attr name="prefix" format="string|reference" />

        <attr name="prefix_color" format="color|reference" />
        <attr name="postfix_color" format="color|reference" />

        <!--后缀的字体-->
        <attr name="postfix_text_size" format="dimension|reference" />

    </declare-styleable>

    <declare-styleable name="LinearGradientView">
        <attr name="start_color" format="color|reference" />
        <attr name="end_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="TestScrollerUpDownView">
        <attr name="text_color" format="color|reference" />
        <attr name="text_size" format="dimension|reference" />

        <!--最后一个字-->
        <attr name="last_word" format="string|reference" />
        <attr name="last_word_text_color" format="color|reference" />
        <attr name="last_word_text_size" format="dimension|reference" />
        <!--单位毫秒-->
        <attr name="animation_duration" format="integer|reference" />

    </declare-styleable>

</resources>