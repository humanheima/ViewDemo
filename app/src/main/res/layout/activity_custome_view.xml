<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomerViewActivity">

    <LinearLayout
        android:id="@+id/rl_custome_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHeight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <com.hm.viewdemo.widget.RoundLayoutTwo
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:two_round_corner="8dp">

            <ImageView
                android:id="@+id/ivTop"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorAccent" />

        </com.hm.viewdemo.widget.RoundLayoutTwo>

        <com.hm.viewdemo.widget.TriangleView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="10dp" />

        <com.hm.viewdemo.widget.TriangleView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:rotation="180" />

        <com.hm.viewdemo.widget.RoundLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:round_corner="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorAccent" />

        </com.hm.viewdemo.widget.RoundLayout>

        <com.hm.viewdemo.widget.CutCornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:corner_radius="24dp"
            app:cut_height="62dp"
            app:cut_radius="28dp"
            app:cut_width="126dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorAccent" />

        </com.hm.viewdemo.widget.CutCornerRelativeLayout>

        <com.hm.viewdemo.widget.CutCornerRelativeLayout2
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00000000"
            app:corner_radius="24dp"
            app:cut_height="62dp"
            app:cut_radius="28dp"
            app:cut_width="126dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorAccent" />

        </com.hm.viewdemo.widget.CutCornerRelativeLayout2>

    </LinearLayout>

</ScrollView>
