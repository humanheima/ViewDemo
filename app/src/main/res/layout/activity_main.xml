            android:id="@+id/btnDrawingCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试DrawingCache"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnLayoutInflater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="LayoutInflater原理分析"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Toast源码分析"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/simpleFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="简单的标签布局"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/useHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/use_horizontal_scroll_view"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="use CardView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_test_screen_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="screen support"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_about_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/about_scroller"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_time_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/test_time_selector"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试ViewStub"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_horizontal_vertical_conflict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
