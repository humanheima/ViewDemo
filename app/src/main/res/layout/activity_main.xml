<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDialogTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试Dialog的使用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnWebPTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试WebP图片的使用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnStateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="沉浸式状态栏研究"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPopWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PopWindow研究"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCustomViewGetStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="《Android自定义控件开发入门与实战》"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSoftKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="软键盘"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="launchDrawEveryThingActivity"
            android:text="drawEveryThing"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnTestDrawPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试 draw path"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnTestCountDownTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试CountDownTimer"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnTestScreenScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试TestScreenScrollView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnLifecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试View的生命周期"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnLollipopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="棒棒糖"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnAnnouncementView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="数值方向上的公告View"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCoordinateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="协调布局CoordinateLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnImageViewSrcBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ImageView src 和 background 的区别"
            android:textAllCaps="false" />

