            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_customer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义View Activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_expandable_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ExpandableListView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_vertical_verticla_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="同一方向的滑动冲突" />

        <Button
            android:id="@+id/btn_scrollview_recyclerview_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ScrollView 嵌套 RecyclerView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_MaxHeightLayoutActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="popWindow设置最大高度"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
