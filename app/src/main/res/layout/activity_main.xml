            android:id="@+id/btn_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ConstraintLayoutActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_autowrap_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="左右对齐的TextView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pullrefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="下拉刷新上拉加载"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="spannable的使用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_histogram_view"
            android:layout_width="match_parent"
