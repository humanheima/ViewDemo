<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_horizontal_vertical_conflict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="activity_horizontal_vertical_conflict" />

        <Button
            android:id="@+id/btn_customer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义viewActivity" />

        <Button
            android:id="@+id/btn_expandable_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ExpandableListView" />

        <Button
            android:id="@+id/btn_vertical_verticla_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同一方向的滑动冲突" />

        <Button
            android:id="@+id/btn_scrollview_recyclerview_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScrollView 嵌套 RecyclerView" />
    </LinearLayout>
</ScrollView>
