<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_root"
        android:background="@drawable/bg_primary_radius_23"
        tools:context=".activity.ChangeImageColorActivity">

    <ImageView
            android:id="@+id/ivSvg"
            android:layout_width="100dp"
            android:tintMode="src_in"
            android:layout_height="100dp"
            android:tint="@color/colorAccent"
            android:backgroundTintMode="multiply"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_android_black_24dp" />

    <Button
            android:id="@+id/btnChangeSvgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改变svg的颜色" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/ivPng"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/bookshelf_icon_edit" />

    </LinearLayout>

    <Button
            android:id="@+id/btnChangePngColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改变png的颜色" />

    <Button
            android:id="@+id/btnLaunchActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动一个Activity" />


</LinearLayout>