<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#ff3344">

    <ImageView
        android:id="@+id/iv_right_spirit"
        android:layout_width="111dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        android:scaleX="-1"
        android:src="@drawable/char_ic_fairy_point_right" />

    <RelativeLayout
        android:id="@+id/bfl_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_right_spirit"
        android:layout_marginStart="-32dp"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/iv_right_spirit">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/char_ic_guide_left_arrow" />

        <TextView
            android:id="@+id/tv_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@drawable/char_shape_unlock_guide_bg"
            android:includeFontPadding="false"
            android:maxWidth="168dp"
            android:paddingHorizontal="11dp"
            android:paddingVertical="10dp"
            android:textColor="#8183FF"
            android:textSize="12dp"
            android:text="山光悦鸟性，潭影空人心。 苍苍竹林寺，杳杳钟声晚。" />

    </RelativeLayout>

</RelativeLayout>