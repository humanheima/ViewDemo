<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#ff3344">

    <RelativeLayout
        android:id="@+id/bfl_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_right_spirit"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="33dp"
        android:layout_toStartOf="@+id/iv_right_spirit">

        <TextView
            android:id="@+id/tv_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/char_shape_unlock_guide_bg"
            android:includeFontPadding="false"
            android:maxWidth="168dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="#8183FF"
            android:textSize="12dp"
            android:text="您会邀请谁到你的岛上来呢？" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-9dp"
            android:layout_toEndOf="@+id/tv_guide_text"
            android:src="@drawable/char_ic_guide_right_arrow" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_right_spirit"
        android:layout_width="111dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/char_ic_fairy_point_right" />


</RelativeLayout>