<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_toLeftOf="@+id/text_drag_number"
        android:text="新闻标题"/>

    <TextView
        android:id="@+id/text_drag_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:text="1/3"/>

    <!--<android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view_drag_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_drag_title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">


    </android.support.v4.widget.NestedScrollView>-->

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/TomHardy"/>


    <TextView
        android:id="@+id/text_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content"
        android:layout_margin="12dp"
        android:text="网易新闻"/>

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content"
        android:layout_margin="12dp"
        android:layout_toRightOf="@+id/text_press"
        android:text="2017-6-23"/>

</RelativeLayout>