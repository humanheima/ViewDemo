<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".activity.CustomViewActivity">

    <com.hm.viewdemo.widget.HeartBeatEventView
        android:id="@+id/heart_beat_event_view"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal" />

    <com.hm.viewdemo.widget.HeartBeatEventView
        android:id="@+id/heart_beat_event_view2"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal" />

    <com.hm.viewdemo.widget.DailyBindView
        android:id="@+id/daily_bind_view"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal" />

    <com.hm.viewdemo.widget.DailyBindView
        android:id="@+id/daily_bind_view2"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>