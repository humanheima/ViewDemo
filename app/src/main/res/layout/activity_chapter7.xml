<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".custom_view.chapter7.Chapter7Activity">

    <Button
        android:id="@+id/btnShadowLayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ShadowLayerView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTextShadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="给文字添加阴影"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnMaskFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="BlurMaskFilter发光效果"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnBitmapShader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="BitmapShader"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnLinearGradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="LinearGradient"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRadialGradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="RadialGradient"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnGradientDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试GradientDrawable"
        android:textAllCaps="false" />

</LinearLayout>