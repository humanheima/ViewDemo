<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SeekBarTestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ff00"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_default_bubble_self_nested_padding_mode"
            android:text="@string/fish_and_bear" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_default_bubble_self_stack_padding_mode"
            android:text="@string/fish_and_bear" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_layer_test_3"
            android:text="@string/fish_and_bear" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/fish_and_bear"
            tools:background="@drawable/bg_layer_test_3" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_layer_test_4"
            android:text="@string/fish_and_bear" />

    </LinearLayout>

</LinearLayout>