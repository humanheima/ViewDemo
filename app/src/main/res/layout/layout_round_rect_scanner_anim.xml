<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/bg_round_rect_stroke">

    <ImageView
        android:id="@+id/round_rect_1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/scan_round_rect" />

    <ImageView
        android:id="@+id/round_rect_2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/scan_round_rect" />

    <ImageView
        android:id="@+id/round_rect_3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/scan_round_rect" />

    <TextView
        android:id="@+id/tv_round_rect_start_scan"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/scan_round_rect"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="@color/white" />

</FrameLayout>