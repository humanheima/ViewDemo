<?xml version="1.0" encoding="utf-8"?>
<com.hm.viewdemo.nested_scroll.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".nested_scroll.NestedScrollVersionOneActivity">

    <RelativeLayout
        android:id="@+id/stickyNavLayoutTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4400ff00">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:gravity="center"
            android:text="软件介绍"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.hm.viewdemo.nested_scroll.SimpleViewPagerIndicator
        android:id="@+id/stickyNavLayoutIndicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/stickyNavLayoutViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

</com.hm.viewdemo.nested_scroll.StickyNavLayout>