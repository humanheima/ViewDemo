<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#ff3344">

    <ImageView
        android:id="@+id/iv_right_spirit"
        android:layout_width="101dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/char_ic_fairy_point_to_friend_circle" />

    <RelativeLayout
        android:id="@+id/bfl_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-23dp"
        android:layout_toStartOf="@+id/iv_right_spirit">

        <TextView
            android:id="@+id/tv_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/char_shape_unlock_guide_bg"
            android:includeFontPadding="false"
            android:maxWidth="165dp"
            android:paddingHorizontal="11dp"
            android:paddingVertical="10dp"
            android:text="千山茶客原创古风小说《重生之将门毒后》中的男主角"
            android:textColor="#8183FF"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-10dp"
            android:layout_toEndOf="@+id/tv_guide_text"
            android:src="@drawable/char_ic_guide_right_arrow" />

    </RelativeLayout>

</RelativeLayout>