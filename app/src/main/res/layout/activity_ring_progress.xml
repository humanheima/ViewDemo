<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hm.viewdemo.widget.RingProgressView
        android:id="@+id/ringProgress"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        app:currentProgress="75"
        app:maxProgress="100"
        app:ringColor="@android:color/darker_gray"
        app:ringProgressColor="@android:color/holo_red_light"
        app:ringWidth="30dp"
        app:rps_text_color="@android:color/holo_blue_light"
        app:rps_text_size="40sp" />

    <Button
        android:id="@+id/btn_start_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ringProgress"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:text="开始动画" />

    <Button
        android:id="@+id/btn_stop_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_anim"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:text="停止动画" />

</RelativeLayout>