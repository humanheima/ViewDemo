<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hm.viewdemo.widget.RingProgressView
        android:id="@+id/ringProgress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        app:currentProgress="75"
        app:maxProgress="100"
        app:ringColor="#FFEACE"
        app:ringProgressColor="#FF6000"
        app:ringWidth="3dp"
        app:rps_text_color="@android:color/holo_blue_light"
        app:rps_text_size="40sp" />

    <Button
        android:id="@+id/btn_start_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ringProgress"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:text="开始动画" />

    <Button
        android:id="@+id/btn_stop_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_anim"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:text="停止动画" />

    <com.hm.viewdemo.widget.RingProgressView2
        android:id="@+id/ringProgress2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        app:currentProgress="80"
        app:maxProgress="100"
        app:ringColor="#FFEACE"
        app:ringProgressColor="#FF6000"
        app:ringWidth="3dp"
        app:rps_text_color="@android:color/holo_blue_light"
        app:rps_text_size="40sp" />


</LinearLayout>