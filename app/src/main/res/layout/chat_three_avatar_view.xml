<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:layout_width="200dp"
        tools:layout_height="200dp"
        android:layout_height="match_parent">

    <!--只有一个头像-->
    <com.hm.viewdemo.widget.hongyang.RoundImageView
            android:id="@+id/iv_only_one_avatar"
            android:src="@drawable/avatar_square"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.86"
            android:visibility="gone"
            app:layout_constraintWidth_percent="0.86"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp" />


    <com.hm.viewdemo.widget.hongyang.RoundImageView
            android:id="@+id/iv_avatar_1"
            android:src="@drawable/avatar_square"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            tools:visibility="gone"
            app:layout_constraintHeight_percent="0.4167"
            app:layout_constraintWidth_percent="0.4167"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.194"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp" />

    <com.hm.viewdemo.widget.hongyang.RoundImageView
            android:id="@+id/iv_avatar_2"
            tools:visibility="gone"
            android:src="@drawable/avatar_square"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_percent="0.4167"
            app:layout_constraintWidth_percent="0.4167"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.722"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp" />

    <com.hm.viewdemo.widget.hongyang.RoundImageView
            android:id="@+id/iv_avatar_3"
            tools:visibility="gone"
            android:src="@drawable/avatar_square"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.4167"
            app:layout_constraintWidth_percent="0.4167"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.722"
            app:layout_constraintHorizontal_bias="0.7857"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>