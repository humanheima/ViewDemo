            android:onClick="onClick"
            android:text="第11章"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnChapter12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="第12章"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnChapter13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="第13章"
            android:textAllCaps="false" />

</LinearLayout>