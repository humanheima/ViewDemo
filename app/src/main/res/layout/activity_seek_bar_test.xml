<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SeekBarTestActivity">

    <SeekBar
        android:id="@+id/seek_bar_one"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:hapticFeedbackEnabled="true"
        android:max="10"
        android:paddingHorizontal="20dp"
        android:progress="5"
        android:progressDrawable="@drawable/custom_progress"
        android:splitTrack="false"
        android:thumb="@drawable/ic_slider_thumb"
        android:thumbOffset="24dp" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:maxHeight="1dp"
        android:minHeight="1dp"
        android:progressDrawable="@drawable/seek_bar_progress_drawable"
        android:splitTrack="false"
        android:thumb="@drawable/seek_bar_thumb" />

    <Button
        android:id="@+id/btn_set_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置进度" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_vertical"
        android:background="#00ff00"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_default_bubble_self_nested_padding_mode"
            android:text="@string/fish_and_bear" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_default_bubble_self_stack_padding_mode"
            android:text="@string/fish_and_bear" />

    </LinearLayout>

</LinearLayout>