<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".activity.NinePatchDrawableActivity">

        <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_bubble1"
                android:layout_height="100dp" />


        <TextView
                android:layout_width="match_parent"
                android:text="原图拉伸"
                android:layout_height="40dp" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <TextView
                    android:background="@drawable/ic_bubble1"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:text="@string/fish_and_bear"
                    android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="200dp">

            <TextView
                    android:background="@drawable/ic_bubble1"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:text="@string/fish_and_bear"
                    android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:text="从文件加载的"
                android:layout_height="match_parent" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <TextView
                    android:id="@+id/tv_9_patch2"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:text="@string/fish_and_bear"
                    android:layout_height="match_parent" />

        </RelativeLayout>

        <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="下面的两个是从Resource加载的"
                android:layout_height="match_parent" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <TextView
                    android:id="@+id/tv_9_patch3"
                    android:layout_width="match_parent"
                    android:text="@string/fish_and_bear"
                    android:ellipsize="end"
                    android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_9_patch4"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <TextView
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_9_patch4"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:text="@string/fish_and_bear"
                    android:layout_height="match_parent" />

        </RelativeLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>