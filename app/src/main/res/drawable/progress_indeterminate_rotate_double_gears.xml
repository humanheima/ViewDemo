<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:drawable="@drawable/ic_gear"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360"/>
    </item>

    <item
        android:bottom="80dp"
        android:left="80dp"
        android:right="80dp"
        android:top="80dp">

        <rotate
            android:drawable="@drawable/ic_gear_small"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-360"/>
    </item>

</layer-list>