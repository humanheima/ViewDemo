<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TestSoftKeyboardActivity">

    <EditText
            android:id="@+id/et_test_send"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:hint="测试把软键盘的回车变成发送按钮"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_adjustpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试adjustpan"
            android:onClick="onClick"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_adjustresize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试adjustResize"
            android:onClick="onClick"

            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_FitSystemWindows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试FitSystemWindows"
            android:textAllCaps="false"
            android:onClick="onClick"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <!--FullScreen-->

    <Button
            android:id="@+id/btn_fullscreen_adjustpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试全屏adjustpan"
            android:onClick="onClick"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <Button
            android:id="@+id/btn_fullscreen_adjustresize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试全屏adjustResize"
            android:onClick="onClick"

            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_fullscreen_FitSystemWindows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试全屏FitSystemWindows"
            android:textAllCaps="false"
            android:onClick="onClick"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!--滚动布局-->

    <Button
            android:id="@+id/btn_scroll_adjustpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试在滚动布局中adjustpan"
            android:onClick="onClick"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <Button
            android:id="@+id/btn_scroll_adjustresize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试在滚动布局中adjustResize"
            android:onClick="onClick"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_scroll_FitSystemWindows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试在滚动布局中FitSystemWindows"
            android:textAllCaps="false"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>